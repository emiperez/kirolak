<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="1.2" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_1_2.xsd">
	<application>
		<locale-config>
			<default-locale>en</default-locale>
		</locale-config>			
        <resource-bundle>
        	<base-name>messages</base-name>
        	<var>msg</var>
        </resource-bundle>
	</application>


	<!-- NAVIGATION RULES -->
	<navigation-rule>
		<from-view-id>/sports.jsp</from-view-id>
		<navigation-case>
			<from-outcome>edit</from-outcome>
			<to-view-id>/sport.jsp</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>newSport</from-outcome>
			<to-view-id>/sport.jsp</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>deleted</from-outcome>
			<to-view-id>/sports.jsp</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>teams</from-outcome>
			<to-view-id>/teams.jsp</to-view-id>
		</navigation-case>
	</navigation-rule>

	<navigation-rule>
		<from-view-id>/sport.jsp</from-view-id>
		<navigation-case>
			<from-outcome>saved</from-outcome>
			<to-view-id>/sports.jsp</to-view-id>
		</navigation-case>
	</navigation-rule>
	
	<!-- TEAMS -->
	<navigation-rule>
		<from-view-id>/sports.jsp</from-view-id>
		<navigation-case>
			<from-outcome>edit</from-outcome>
			<to-view-id>/sport.jsp</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>newSport</from-outcome>
			<to-view-id>/sport.jsp</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>deleted</from-outcome>
			<to-view-id>/teams.jsp</to-view-id>
		</navigation-case>
	</navigation-rule>

	<navigation-rule>
		<from-view-id>/team.jsp</from-view-id>
		<navigation-case>
			<from-outcome>saved</from-outcome>
			<to-view-id>/teams.jsp</to-view-id>
		</navigation-case>
	</navigation-rule>

	<!-- BEANS -->
	<managed-bean>
		<managed-bean-name>sport</managed-bean-name>
		<managed-bean-class>
			com.kirolak.beans.SportBean
		</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
		<managed-property>
			<property-name>observers</property-name>
			<list-entries>
				<value>#{app}</value>
			</list-entries>
		</managed-property>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>team</managed-bean-name>
		<managed-bean-class>
			com.kirolak.beans.TeamBean
		</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>app</managed-bean-name>
		<managed-bean-class>
			com.kirolak.beans.Kirolak
		</managed-bean-class>
		<managed-bean-scope>application</managed-bean-scope>
	</managed-bean>
	
	<managed-bean>
    <managed-bean-name>makeList</managed-bean-name>
    <managed-bean-class>
       com.kirolak.beans.ListFromCollection
    </managed-bean-class>
    <managed-bean-scope>
       request
    </managed-bean-scope>
 </managed-bean>

	<validator>
		<validator-id>kirolak.seoNameValidator</validator-id>
		<validator-class>
			com.kirolak.jsf.validators.SeoNameValidator
		</validator-class>
	</validator>
	
</faces-config>
